generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  id         Int      @id @default(autoincrement())
  task       String
  created_at DateTime @default(now())
  doneStatus Boolean
  list       List?    @relation(fields: [listId], references: [id])
  listId     Int

  @@map("tasks")
}

model List {
  id         Int      @id @default(autoincrement())
  name       String   @unique
  created_at DateTime @default(now())
  tasks      Task[]

  @@map("lists")
}
